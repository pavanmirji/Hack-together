@page
@model GrapnApisSolution.Pages.MeetingsModel
@{
    ViewData["Title"] = "Upcoming Meetings";
}


<style>
      body {
        padding: 20px 0;
        background: #f2f5f8;
      }
 </style>


<div class="container row" style="
    background: #005F86;
    color: white;
    padding: 5px;
text-align: center;
font-size: 20px;
    margin-bottom: 20px;
">@ViewData["Title"]</div>

<div class="text-center">
    
</div>

<div class="container row" style="box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px; padding:20px;">
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                Event Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
        </tr>
            @foreach(var item in @Model.Events)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.EventName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.StartDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.EndDateTime)
                    </td>
                </tr>
                
            }
    </table>

    </div>